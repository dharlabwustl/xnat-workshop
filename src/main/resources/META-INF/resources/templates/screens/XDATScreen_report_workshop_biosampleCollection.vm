#macro(showBoolean $property $item)
<!-- BEGIN Generated by the showBoolean macro -->
    #set ($value = $!item.getStringProperty($property))
    #if( "$!value" == "" )
    (No value given)
    #elseif ($value)
    Yes
    #else
    No
    #end
<!-- END Generated by the showBoolean macro -->
#end

#macro(showString $property $item)
<!-- BEGIN Generated by the showString macro -->
    #set ($value = $!item.getBooleanProperty($property))
